set -o errexit -o errtrace -o nounset -o pipefail

if [[ "${#@}" = "0" ]]; then
    cat /dev/stdin | head -n 1
else
    echo "${1}"
fi | grep -E -i -q '^\s*(1|true|t|yes|y)\s*$' >/dev/null 2>&1

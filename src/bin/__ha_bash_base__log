set -o errexit -o errtrace -o nounset -o pipefail

severity=${1:?Need severity}
shift
echo $(date '+%Y%m%dT%H%M%S') $(basename $(cut -d $'\0' -f 2 /proc/${PPID}/cmdline)) [${severity}] "${@:-}" >/dev/stderr

